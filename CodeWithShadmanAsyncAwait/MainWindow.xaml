<Window x:Class="CodeWithShadmanAsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeWithShadmanAsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <DockPanel LastChildFill="False" Grid.Row="1">
            <TextBox DockPanel.Dock="Top" x:Name="textBox" />
            <Button DockPanel.Dock="Top" x:Name="Ok" 
                    Margin="0 10 0 10 " Click="Ok_Click"> Ok</Button>
            
        </DockPanel>

        <TextBox TextWrapping="Wrap" x:Name="txtStatus" 
                   Grid.Row="2" TextAlignment="Center"/>
    </Grid>
</Window>
